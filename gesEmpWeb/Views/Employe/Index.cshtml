@{
    ViewData["Title"] = "Liste des employes";
}
@model IEnumerable<Employe>
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Liste des employes</h2>
        <a asp-page="/Employe/Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Nouveau Employe
        </a>
    </div>

    <div class="card border-0 mb-4 shadow-sm p-3">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Rechercher un employe..." />
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="fas fa-search"></i>
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select">
                        <option>Statut</option>
                        <option>Active</option>
                        <option><i class="fa fa-file-archive-o" aria-hidden="true"></i></option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select">
                        <option>Departement</option>
                        <option>d1</option>
                        <option>d2</option>
                        <option>d3</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="table-responsive text-center">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Numero</th>
                            <th>Nom Complet</th>
                            <th>Telephone</th>
                            <th>Date de création</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="7">
                                    <div class="alert alert-info mb-0" role="alert">
                                        Aucun employe disponible.
                                    </div>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var employe in Model)
                            {
                                <tr>
                                    <td><strong>@employe.Id</strong></td>
                                    <td>@employe.Numero</td>
                                    <td>@employe.NomComplet</td>
                                    <td>@employe.Telephone</td>
                                    <td>@employe.DateCreation.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (employe.IsActive)
                                        {
                                            <span class="badge bg-info">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Archive</span>
                                        }
                                    </td>
                                    <td class="text-center action-icons text-decoration-none">
                                        <a class="badge bg-info text-decoration-none" href="#" title="Infos">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a class="badge bg-warning text-decoration-none" href="#" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a class="badge bg-danger text-decoration-none" href="#" title="Archiver">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="py-2">
        <nav aria-label="Pagination" class="d-flex justify-content-center">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled"><a class="page-link" href="#">Précédent</a></li>
                @for (int i = 1; i <= ViewBag.NbrPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link"
                        asp-action="Index"
                        asp-route-page="@i"
                        asp-route-deptId="@ViewBag.DepartementId">
                            @i
                        </a>
                    </li>
                }
                <li class="page-item"><a class="page-link" href="#">Suivant</a></li>
            </ul>
        </nav>
    </div>

</div>
