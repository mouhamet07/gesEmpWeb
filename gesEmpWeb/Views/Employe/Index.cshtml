@{
    ViewData["Title"] = "Liste des Employes";
}

    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">Liste des Employes</h2>
            <a asp-page="/Employe/Create" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Nouveau Employe
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <!-- Filtres -->
                <div class="row mb-3">
                    <div class="col-md-4">
                        <input type="text" class="form-control" placeholder="Rechercher un Employe..." />
                    </div>
                    <div class="col-md-3">
                        <select class="form-select">
                            <option>Type de Employe</option>
                            <option>Chèque</option>
                            <option>Épargne</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select">
                            <option>Trier par</option>
                            <option>Date de création</option>
                            <option>Solde</option>
                            <option>Nom</option>
                        </select>
                    </div>
                </div>

                <!-- Tableau responsive -->
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>N° Employe</th>
                                <th>Titulaire</th>
                                <th>Type</th>
                                <th>Solde</th>
                                <th>Date de création</th>
