@{
    ViewData["Title"] = "Liste des departements";
}
@model IEnumerable<Departement>

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Liste des departements</h2>
    </div>

    <div class="card border-0 mb-4 shadow-sm p-3">
        <div class="card-body">
            <div class="row g-3 d-flex">
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Ajouter un departement..." />
                    </div>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-outline-secondary" type="button">Enregistrer</button>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="table-responsive text-center">

                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Date de création</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5">
                                    <div class="alert alert-info mb-0" role="alert">
                                        Aucun departement disponible.
                                    </div>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var departement in Model)
                            {
                                <tr>
                                    <td><strong>@departement.Id</strong></td>
                                    <td>@departement.Name</td>
                                    <td>@departement.DateCreation.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (departement.IsActive)
                                        {
                                            <span class="badge bg-info">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Archive</span>
                                        }
                                    </td>
                                    <td class="text-center action-icons text-decoration-none">
                                        <a class="badge bg-info text-decoration-none"
                                            asp-controller="Employe"
                                            asp-action="Index"
                                            asp-route-deptId="@departement.Id"
                                            title="Employes">
                                            <i class="fas fa-eye"></i> Employes
                                        </a>
                                        <a class="badge bg-warning text-decoration-none" href="#" title="Modifier">
                                            <i class="fas fa-edit"></i> Modifier
                                        </a>
                                        <a class="badge bg-danger text-decoration-none" href="#" title="Archiver">
                                            <i class="fas fa-trash-alt"></i> Archiver
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>

    <!-- Pagination -->
    <div class="py-2">
        <nav aria-label="Pagination" class="d-flex justify-content-center">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled"><a class="page-link" href="#">Précédent</a></li>
                @for (int i = 1; i <= ViewBag.NbrPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }
                <li class="page-item"><a class="page-link" href="#">Suivant</a></li>
            </ul>
        </nav>
    </div>

</div>
